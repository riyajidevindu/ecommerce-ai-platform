# Example variables for ecommerce-ai platform

name               = "ecommerce-ai"
region             = "us-east-1"
cluster_name       = "ecommerce-ai-eks"
kubernetes_version = "1.29"
node_instance_type = "t3.medium"

# Networking
vpc_cidr        = "10.0.0.0/16"
azs             = ["ap-south-1a", "ap-south-1b"]
public_subnets  = ["10.0.0.0/24", "10.0.1.0/24"]
private_subnets = ["10.0.10.0/24", "10.0.11.0/24"]

# ECR repositories to create
 ecr_repositories = [
  "auth-service",
  "stock-service",
  "whatsapp-connector-service",
  "ai-orchestrator-service",
  "notification-service",
  "file-storage-service",
  "frontend",
]

# Optional RDS
create_rds             = false
rds_engine_version     = "15.5"
rds_instance_class     = "db.t4g.micro"
rds_allocated_storage  = 20
rds_username           = "appuser"
# Do NOT commit rds_password values here. Prefer environment or Secrets Manager:
# rds_password = "" # leave empty; inject with TF_VAR_rds_password at apply time
rds_db_name            = "appdb"

# To use AWS Secrets Manager for the password (recommended):
use_rds_password_from_secrets_manager = false
rds_password_secret_id                = ""      # e.g. "prod/db/password" or secret ARN
rds_password_is_json                  = false   # set true if secret string is JSON
rds_password_secret_json_key          = "password"

# Optional Frontend CDN
create_frontend_cdn = false
frontend_bucket     = "ecommerce-ai-frontend-example"
